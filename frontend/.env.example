# StartupAI Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:6543/postgres?pgbouncer=true

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MARKETING_URL=http://localhost:3001

# Analytics & Product Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_your_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Development
NODE_ENV=development
NEXT_PUBLIC_ENABLE_CLICK_TO_COMPONENT=true

# AI Provider Configuration
# Vercel AI SDK - Choose one provider (Anthropic recommended for conversational quality)
# Get Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
# Alternative: OpenAI API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your-openai-key-here

# =============================================================================
# Modal Serverless Configuration (PRIMARY - Recommended)
# =============================================================================
# Modal replaces CrewAI AMP with $0 idle costs and checkpoint-and-resume pattern
# See: startupai-crew/docs/adr/002-modal-serverless-migration.md

# Modal API Endpoints (Production)
MODAL_KICKOFF_URL=https://chris00walker--startupai-validation-fastapi-app.modal.run/kickoff
MODAL_STATUS_URL=https://chris00walker--startupai-validation-fastapi-app.modal.run/status
MODAL_HITL_APPROVE_URL=https://chris00walker--startupai-validation-fastapi-app.modal.run/hitl/approve

# Modal Authentication Token (shared secret for webhook verification)
# Generate with: openssl rand -base64 32
MODAL_AUTH_TOKEN=startupai-modal-secret-2026

# =============================================================================
# CrewAI AMP Configuration (DEPRECATED - Fallback Only)
# =============================================================================
# Legacy AMP endpoint - kept for backward compatibility during migration
# Will be removed after Modal migration is complete
CREWAI_API_URL=https://startupai-b4d5c1dd-27e2-4163-b9fb-a18ca06ca-4f4192a6.crewai.com
# CREWAI_API_TOKEN=your-crewai-bearer-token-here

# Webhook Authentication (used by both Modal and AMP)
# Required for webhook endpoint to accept callbacks when flows complete
CREW_CONTRACT_BEARER=startupai-webhook-secret-2024
