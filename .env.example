# ============================================================================
# StartupAI Product Platform - Environment Variables Template
# ============================================================================
# Copy this file to frontend/.env.local and fill in your actual values
# NEVER commit .env.local to version control
# ============================================================================

# ----------------------------------------------------------------------------
# Supabase (Database & Authentication)
# ----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
DATABASE_URL=postgresql://postgres.your-project:[PASSWORD]@aws-0-region.pooler.supabase.com:6543/postgres

# ----------------------------------------------------------------------------
# OpenAI (AI/LLM - Primary Provider)
# ----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id-here
OPENAI_MODEL_DEFAULT=gpt-4

# ----------------------------------------------------------------------------
# Anthropic Claude (AI/LLM - Fallback Provider)
# ----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL_DEFAULT=claude-3-sonnet-20240229

# ----------------------------------------------------------------------------
# Google Gemini (AI/LLM - Creative Tasks)
# ----------------------------------------------------------------------------
GOOGLE_AI_API_KEY=your-google-ai-key-here
GOOGLE_MODEL_DEFAULT=gemini-pro

# ----------------------------------------------------------------------------
# Vercel AI SDK
# ----------------------------------------------------------------------------
VERCEL_AI_SDK_API_KEY=your-vercel-token-here
AI_PROVIDER_FALLBACK_STRATEGY=round-robin

# ----------------------------------------------------------------------------
# Cross-Site Configuration
# ----------------------------------------------------------------------------
NEXT_PUBLIC_MARKETING_URL=https://startupai-site.netlify.app
NEXT_PUBLIC_APP_URL=https://app-startupai-site.netlify.app

# For local development, uncomment these:
# NEXT_PUBLIC_MARKETING_URL=http://localhost:3000
# NEXT_PUBLIC_APP_URL=http://localhost:3001

# ----------------------------------------------------------------------------
# JWT & Session Management
# ----------------------------------------------------------------------------
JWT_SECRET=your-jwt-secret-min-32-chars
SESSION_SECRET=your-session-secret-min-32-chars

# ----------------------------------------------------------------------------
# GitHub (for CLI automation)
# ----------------------------------------------------------------------------
GITHUB_TOKEN=ghp-your-github-token-here

# ----------------------------------------------------------------------------
# Netlify (for CLI deployment)
# ----------------------------------------------------------------------------
NETLIFY_AUTH_TOKEN=your-netlify-token-here

# ----------------------------------------------------------------------------
# Vector Search & Embeddings
# ----------------------------------------------------------------------------
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536
VECTOR_SEARCH_THRESHOLD=0.7

# ----------------------------------------------------------------------------
# Rate Limiting & Quotas
# ----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60
FREEMIUM_MONTHLY_LIMIT=3

# ----------------------------------------------------------------------------
# Development
# ----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_DEBUG=true
