@startuml C4_Context
' C4-PlantUML: https://github.com/plantuml-stdlib/C4-PlantUML
!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

LAYOUT_WITH_LEGEND()

Person(client, "Client", "Consumes Strategyzer-style deliverables")
System(system, "Chris Walker Consulting Platform", "AI-first, GCP-native")
System_Ext(email, "Email/Slack", "Notifications")
System_Ext(oauth, "OAuth Provider", "Authentication")

Rel(client, system, "Create/Review deliverables")
Rel(system, email, "Sends notifications")
Rel(client, oauth, "Authenticate")
Rel(system, oauth, "Verify tokens")

SHOW_LEGEND()
@enduml
