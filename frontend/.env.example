# StartupAI Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:6543/postgres?pgbouncer=true

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MARKETING_URL=http://localhost:3001

# Analytics & Product Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_your_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Development
NODE_ENV=development
NEXT_PUBLIC_ENABLE_CLICK_TO_COMPONENT=true

# AI Provider Configuration
# Vercel AI SDK - Choose one provider (Anthropic recommended for conversational quality)
# Get Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
# Alternative: OpenAI API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your-openai-key-here

# OpenRouter (Multi-Provider Gateway - Recommended for tool calling reliability)
# Get API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct
OPENROUTER_PROVIDER=Groq

# =============================================================================
# Modal Serverless Configuration (Primary)
# =============================================================================
# Modal provides checkpoint-and-resume with $0 idle costs between HITL approvals
# See: startupai-crew/docs/adr/002-modal-serverless-migration.md

# Modal API Endpoints (Production)
MODAL_KICKOFF_URL=https://chris00walker--startupai-validation-fastapi-app.modal.run/kickoff
MODAL_STATUS_URL=https://chris00walker--startupai-validation-fastapi-app.modal.run/status
MODAL_HITL_APPROVE_URL=https://chris00walker--startupai-validation-fastapi-app.modal.run/hitl/approve

# Modal Authentication Token (shared secret for webhook verification)
# Generate with: openssl rand -base64 32
MODAL_AUTH_TOKEN=startupai-modal-secret-2026

# Webhook Authentication (Modal)
# Required for webhook endpoint to accept callbacks when flows complete
# Should match MODAL_AUTH_TOKEN

# =============================================================================
# External Integrations OAuth Configuration
# =============================================================================
# OAuth credentials for external service integrations.
# Register OAuth apps with each provider and add the following callback URLs:
#   Production: https://app.startupai.site/api/integrations/{type}/callback
#   Development: http://localhost:3000/api/integrations/{type}/callback
#
# JWT signing secret for OAuth state tokens (uses Supabase JWT secret by default)
# SUPABASE_JWT_SECRET is used if available, otherwise SUPABASE_SERVICE_ROLE_KEY

# Slack (https://api.slack.com/apps)
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

