{
  "name": "strategyzer-ai-platform",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run dev",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "lint:md": "markdownlint docs",
    "lint:md:fix": "markdownlint docs --fix",
    "prompts:validate": "node scripts/prompts/validate.js",
    "docs:openapi:lint": "redocly lint docs/architecture/20-contracts/openapi-gateway.yaml",
    "docs:diagrams:render": "docker run --rm -v \"$PWD/docs/architecture/10-views\":/ws plantuml/plantuml -tpng /ws/*.puml",
    "docs:prisma:validate": "npx prisma validate --schema=docs/engineering/30-data/prisma-schema.prisma",
    "docs:validate": "npm run lint:md && npm run prompts:validate && npm run docs:openapi:lint && npm run docs:prisma:validate",
    "bdd": "cucumber-js --require tests/e2e/steps/**/*.js --require tests/e2e/support/**/*.js --publish-quiet --tags 'not @wip'",
    "bdd:wip": "cucumber-js --require tests/e2e/steps/**/*.js --require tests/e2e/support/**/*.js --publish-quiet",
    "test:unit": "jest --runInBand --selectProjects default --config jest.config.js --testPathPattern=tests/unit/",
    "test:contract": "jest --runInBand --config jest.config.js --testPathPattern=tests/contract/",
    "test:integration": "jest --runInBand --config jest.config.js --testPathPattern=tests/integration/",
    "test:e2e": "npm run bdd",
    "test:perf": "k6 run tests/perf/smoke.js || echo 'k6 not installed; skipping perf'",
    "test:mutation": "stryker run",
    "test": "npm run test:unit && npm run test:contract",
    "test:ci": "npm run test && npm run e2e --if-present"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.39.0",
    "@cucumber/cucumber": "^10.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@stryker-mutator/core": "^7.3.2",
    "@stryker-mutator/jest-runner": "^7.3.2",
    "@redocly/cli": "^1.22.0",
    "prisma": "^5.14.0"
  }
}
