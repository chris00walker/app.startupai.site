# StartupAI Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:6543/postgres?pgbouncer=true

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MARKETING_URL=http://localhost:3001

# Analytics & Product Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_your_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Development
NODE_ENV=development
NEXT_PUBLIC_ENABLE_CLICK_TO_COMPONENT=true

# AI Provider Configuration
# Vercel AI SDK - Choose one provider (Anthropic recommended for conversational quality)
# Get Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
# Alternative: OpenAI API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your-openai-key-here

# CrewAI AMP Configuration
# Production CrewAI AMP endpoint for Value Proposition Design crew
CREWAI_API_URL=https://startupai-b4d5c1dd-27e2-4163-b9fb-a18ca06ca-4f4192a6.crewai.com
